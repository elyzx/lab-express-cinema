<div class="padded-container"> 
    <h2>Ironhack Cinema</h2>
    <h4>Click on the movie to check the showtimes!</h4>

    <div class="flex-container"> 

        {{#each movie}}

            <div class="flex-item"> 
                <img src="{{image}}">
                <h4>{{title}}</h4>
                <a href="/movie/{{id}}" class="a-underline">See more</a>
            </div>

        {{/each}}

    </div>

</div>